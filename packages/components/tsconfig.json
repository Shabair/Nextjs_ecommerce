{
  "extends": "../../tsconfig.base.json",
  // ❗ Inherit base settings

  "compilerOptions": {
    /* ===== OUTPUT TYPES FOR NPM PACKAGE ===== */

    "rootDir": "src",
    // ❗ Sets source root

    "outDir": "dist",
    // ❗ All compiled output goes into dist/

    "declaration": true,
    // ❗ Generates .d.ts files for consumers

    "declarationMap": true,
    // ❗ Enables source maps for declarations (useful in Storybook)

    "sourceMap": true,
    // ❗ Generates .js.map files


    /* ===== EXTRA STRICT RULES ===== */

    "noUncheckedIndexedAccess": true,
    // ❗ Safer indexing: arr[index] is possibly undefined

    "exactOptionalPropertyTypes": true,
    // ❗ Optional props must be used exactly, not loosely

    "verbatimModuleSyntax": true,
    // ❗ Force TS to not rewrite import/export syntax

    "noUncheckedSideEffectImports": true,
    // ❗ Warn when importing files just for side-effects

    "moduleDetection": "force",
    // ❗ Treat files as modules when importing

    "baseUrl": ".",
    // ❗ Makes this package's root the starting point for absolute and aliased imports
    

    "paths": {
      "@/*": ["./src/*"], // Creates "@/..." alias pointing to src/, used for internal component imports
    }
  },

  "include": ["src", "src/**/*.stories.tsx"]
}
