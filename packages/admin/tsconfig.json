{
  "extends": "../../tsconfig.base.json",
  // ❗ Inherit all root settings

  "compilerOptions": {

    "baseUrl": ".",
    // ❗ Makes this package's root the starting point for absolute and aliased imports

    "plugins": [
      { "name": "next" }
      // ❗ Enables Next.js-specific type rules
    ]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
